# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# MongoDB Connection String
MONGO_URL=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/khlp_database?retryWrites=true&w=majority

# Database Name
DB_NAME=khlp_database

# JWT Secret Key (generate a secure random string)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# Owner Credentials (for initial setup)
OWNER_EMAIL=your-email@example.com
OWNER_PASSWORD=your-secure-password

# CORS Origins (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,https://your-frontend-url.netlify.app

# Server Port (optional, defaults to 8000)
PORT=8000
